---
import type { PostWithTags } from '../types/database';
import FormattedDate from './FormattedDate.astro';
import { processMarkdown } from '../lib/markdown-utils';

export interface Props {
  post: PostWithTags;
  variant?: 'default' | 'featured' | 'compact';
  showExcerpt?: boolean;
}

const { post, variant = 'default', showExcerpt = true } = Astro.props;

const isArticle = post.type === 'article';
const isNote = post.type === 'note';
const linkUrl = isArticle ? `/articles/${post.slug}` : `/notes/${post.slug}`;

// Different display logic for Articles and Notes
---

<article class="group post-card card card-hover card-interactive p-8">
  <!-- Article: Improved vertical layout -->
  {isArticle && (
    <div class="space-y-6">
      <!-- Header: Time and status -->
      <div class="flex items-center justify-between text-sm text-apple-gray-500">
        <time class="font-medium">
          <FormattedDate date={post.published_at || post.created_at} />
        </time>
        {post.status === 'draft' && (
          <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold bg-apple-orange/10 text-apple-orange border border-apple-orange/20">
            Draft
          </span>
        )}
      </div>
      
      <!-- Title and excerpt -->
      <div class="space-y-4">
        {post.title && (
          <h2 class="text-2xl font-bold text-apple-gray-900 leading-tight tracking-tight group-hover:text-apple-blue-500 transition-all duration-300">
            <a 
              href={linkUrl}
              class="block"
            >
              {post.title}
            </a>
          </h2>
        )}
        
        {showExcerpt && post.excerpt && (
          <p class="text-apple-gray-600 leading-relaxed line-clamp-3 text-lg">
            {post.excerpt}
          </p>
        )}
      </div>
      
      <!-- Tags and read more -->
      <div class="flex items-center justify-between pt-4">
        <div class="flex flex-wrap gap-2">
          {post.tags && post.tags.length > 0 && post.tags.slice(0, 3).map((tag) => (
            <a 
              href={`/articles?tag=${tag.slug || tag.name || tag}`}
              class="tag tag-primary"
            >
              {tag.name || tag}
            </a>
          ))}
          {post.tags && post.tags.length > 3 && (
            <span class="text-sm text-apple-gray-500 px-3 py-1">
              +{post.tags.length - 3} more
            </span>
          )}
        </div>
        
        <a 
          href={linkUrl}
          class="text-sm font-semibold text-apple-blue-500 hover:text-apple-blue-600 transition-all duration-300 opacity-0 group-hover:opacity-100 group-hover:translate-x-1 flex items-center gap-2"
        >
          Read article
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  )}
  
  <!-- Note: Concise vertical layout -->
  {isNote && (
    <div class="space-y-5">
      <!-- Header: Time and status -->
      <div class="flex items-center justify-between text-sm text-apple-gray-500">
        <time class="font-medium">
          <FormattedDate date={post.published_at || post.created_at} />
        </time>
        {post.status === 'draft' && (
          <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold bg-apple-orange/10 text-apple-orange border border-apple-orange/20">
            Draft
          </span>
        )}
      </div>
      
      <!-- Content -->
      {post.content && (
        <div class="prose prose-apple-gray max-w-none">
          <div class="text-apple-gray-700 leading-relaxed" set:html={processMarkdown(post.content)}>
          </div>
        </div>
      )}
      
      <!-- Tags -->
      {post.tags && post.tags.length > 0 && (
        <div class="flex flex-wrap gap-2 pt-3">
          {post.tags.slice(0, 4).map((tag) => (
            <a 
              href={`/notes?tag=${tag.slug || tag.name || tag}`}
              class="tag"
            >
              {tag.name || tag}
            </a>
          ))}
          {post.tags && post.tags.length > 4 && (
            <span class="text-sm text-apple-gray-500 px-3 py-1">
              +{post.tags.length - 4} more
            </span>
          )}
        </div>
      )}
    </div>
  )}
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>